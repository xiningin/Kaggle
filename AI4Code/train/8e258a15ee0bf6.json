n","5adadc7c":"preview","a3d78f98":"review = [word for word in review if not word in stopwords.words('english')]","0ef665b2":"review","c0312463":"from nltk.stem.porter import PorterStemmer\nps= PorterStemmer()","55d38210":"review = [ps.stem(word) for word in review]","aa7499bf":"review","d2a84e15":"review= \" \".join(review)","2477e610":"review","fbf3d44a":"corpus = []\nps= PorterStemmer()\n\nfor i in range(len(data)):\n  \n  review = re.sub('[^a-zA-Z]', ' ',data ['Review'] [i] )\n  review = review.lower()\n  review= review.split()\n  review = [word for word in review if not word in stopwords.words('english')]\n  review= \" \".join(review)\n\n  corpus.append(review)","6a0009e2":"corpus","adca8cfc":"from sklearn.feature_extraction.text import CountVectorizer","ef75735d":"cv= CountVectorizer(max_features=1500)","30b33007":"x = cv.fit_transform(corpus).toarray()","2f918936":"##(1000,1500) means 1000 reviews with 1500 words to be 0 if it does not appear in the comment or 1 if it appears\n","9a819bc8":"x.shape","656beedd":"y= data.iloc[:, 1].values","c8f13ad5":"y.shape","40558def":"y[:10]","91dae5d1":"from sklearn.model_selection import train_test_split\nx_train, x_test, y_train, y_test = train_test_split(x, y, test_size= 0.2, random_state= 0)","615a6e2f":"x_train.shape, x_test.shape","825d74f0":"y_train.shape, y_test.shape","ed933a92":"from sklearn.naive_bayes import GaussianNB","eb352191":"classifier = GaussianNB()","78dd643d":"classifier.fit(x_train, y_train)","c8e0039b":"y_pred = classifier.predict(x_test)","86cf3f4d":"from sklearn.metrics import accuracy_score","e351f7d2":"accuracy_score(y_test, y_pred)","f178e4d5":"0.695*200","686c9f05":"## In 139 records our prediction was right and in 61(200-139) our prediction was wrong.","529ffaf9":"## Cleaning Text Data ","b2fe9aec":"## Bag of Word Model","77ae5e8a":"## Apply Naive Bayes Algorithm","6a4ace30":"## Business Problem"}}